<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="FullScreenTheme">
        <item name="android:background">@drawable/img_splash</item>
    </style>

    <style name="Horizontal_Background_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/backgroundColor</item>
    </style>

    <style name="Horizontal_Divider_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/dividerBlack</item>
    </style>

</resources>
